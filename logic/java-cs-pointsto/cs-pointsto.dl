.decl LoadInstanceField(base:tyVarRef,field:tyFieldSignatureRef,to:tyVarRef,inmethod:tyMethodSignatureRef)

LoadInstanceField(base,field,to,inmethod) :-
   LoadInstanceFieldIndex(base,index,to,inmethod),
   VarRef(to),
   VarRef(base),
   VarType(base,type),
   FieldIndexSignature(field,index,type).

