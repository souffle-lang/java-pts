// OptimizeMerge
//

.decl OptimizeMerge(hctx:tyContext,heap:tyHeapAllocationRef,calleeCtx:tyContext) 

OptimizeMerge([obj1,obj2],heap,[obj2,heap]) :- 
   MyMergeBasis([obj1,obj2],heap),
   InstructionRef(obj1),
